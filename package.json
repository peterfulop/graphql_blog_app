{
  "name": "graphql_blog_app",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "4.7.1",
    "@types/pg": "^8.6.5",
    "@types/uuid": "^8.3.4",
    "apollo-server-core": "^3.11.1",
    "apollo-server-express": "^3.11.1",
    "convict": "^6.2.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-tools": "^8.3.11",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.20",
    "pg": "^8.8.0",
    "prisma": "^4.7.1",
    "uuid": "^9.0.0"
  },
  "scripts": {
    "start:dev": "nodemon --watch './**/*.ts' --exec 'ts-node' src/index.ts",
    "process:env": "ts-node --require dotenv/config",
    "rebuild:be": "docker compose build backend && docker compose rm --stop backend && docker compose up -d backend",
    "build": "rimraf dist && swc ./src -d dist",
    "start": "node dist/index.js",
    "start:backend": "ts-node src/index.ts dotenv_config_path=./.env",
    "start:docker": "yarn build && node --inspect=0.0.0.0 dist/index.js"
  },
  "devDependencies": {
    "@fastify/cookie": "^8.3.0",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.14",
    "@types/convict": "^6.1.1",
    "@types/morgan": "^1.9.3",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  }
}
